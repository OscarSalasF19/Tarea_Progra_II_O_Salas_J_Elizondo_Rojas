                                  <MFXTextField fx:id="txfSeconds" alignment="CENTER" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" prefWidth="59.0" promptText="sec." styleClass="jfx-text-field-time" />
                              </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                          </HBox>
                  <TableView maxHeight="1.7976931348623157E308" maxWidth="180.0" minWidth="180.0" prefWidth="180.0" styleClass="jfx-table-view-format" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Equipos Seleccionados" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                          <MFXButton onAction="#onActionStartTourney" prefHeight="34.0" prefWidth="125.0" text="Iniciar Torneo" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
