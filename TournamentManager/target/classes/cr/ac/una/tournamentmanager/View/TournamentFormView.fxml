                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                  <Label styleClass="fx-label" text="Cant. Equipos">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" styleClass="jfx-time-input" VBox.vgrow="NEVER">
                     <children>
                                <MFXSlider fx:id="sliderTeamsAmount" max="64.0" min="2.0" minorTicksCount="64" showTicksAtEdges="false" />
                        <Label fx:id="txfTeamsAmount" styleClass="fx-label" text="2" />
                     </children>
                  </HBox>
                  <Label styleClass="fx-label" text="Tiempo" />
                          <HBox alignment="CENTER" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" styleClass="jfx-time-input" VBox.vgrow="NEVER">
                              <children>
                                  <MFXTextField fx:id="txfMinutes" alignment="CENTER" floatMode="DISABLED" maxWidth="1.7976931348623157E308" prefWidth="58.0" promptText="min." styleClass="jfx-text-field-time" />
