                            <columns>
                                <TableColumn fx:id="infoTableColumn" editable="false" prefWidth="75.0" sortable="false" text="Deportes" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <MFXButton maxWidth="1.7976931348623157E308" onAction="#onActionAddSport" prefHeight="29.0" styleClass="jfx-btn-anadir" text="Añadir" VBox.vgrow="ALWAYS">
                            <graphic>
                                <ImageView fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                            </graphic>
                        </MFXButton>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="200.0" minWidth="200.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0">
                            <children>
                                <VBox fx:id="imageBox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="jfx-image-View-Sport" HBox.hgrow="ALWAYS">
                                    <children>
                                        <ImageView fx:id="imageViewSportPhoto" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS" />
                                    </children>
                                </VBox>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0">
                                    <children>
                                        <MFXButton onAction="#onActionCamera" prefHeight="34.0" prefWidth="76.0" text="Camará">
                                            <VBox.margin>
                                                <Insets top="3.0" />
                                            </VBox.margin>
                                        </MFXButton>
                                        <MFXButton layoutX="10.0" layoutY="15.0" onAction="#onActionArchive" prefHeight="34.0" prefWidth="76.0" text="Archivo" />
                                    </children>
                                    <padding>
                                        <Insets top="5.0" />
                                    </padding>
                                </VBox>
                            </children>
                        </HBox>
                        <MFXTextField fx:id="txfSportName" maxWidth="1.7976931348623157E308" promptText="Nombre" styleClass="jfx-text-field-smaller" />
                        <HBox alignment="BOTTOM_CENTER" layoutX="20.0" layoutY="110.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" VBox.vgrow="ALWAYS">
                            <children>
                                <MFXButton onAction="#onActionSave" text="Guardar" />
                                <MFXButton layoutX="62.0" layoutY="37.0" onAction="#onActionDelete" text="Eliminar" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
